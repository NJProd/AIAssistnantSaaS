# ===========================================
# KatzAI Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/katzai

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long
JWT_EXPIRES_IN=7d

# API Server
API_PORT=3001
API_HOST=0.0.0.0

# ===========================================
# AI PROVIDERS (Gemini is FREE!)
# ===========================================

# LLM Provider (gemini | anthropic | openai)
# Gemini is FREE with generous limits!
LLM_PROVIDER=gemini
GEMINI_API_KEY=your-gemini-api-key-here

# Get your FREE Gemini API key at:
# https://aistudio.google.com/app/apikey

# Gemini Model (gemini-1.5-flash is fast & free)
GEMINI_MODEL=gemini-1.5-flash

# Transcription Provider (gemini | whisper | deepgram)
# Gemini can also transcribe audio for FREE!
TRANSCRIPTION_PROVIDER=gemini

# ===========================================
# OPTIONAL: Paid alternatives (not required)
# ===========================================
# ANTHROPIC_API_KEY=sk-ant-your-key-here
# ANTHROPIC_MODEL=claude-sonnet-4-20250514
# OPENAI_API_KEY=sk-your-openai-key-here
# OPENAI_MODEL=gpt-4-turbo-preview

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# Logging
LOG_LEVEL=info

# Admin Dashboard
NEXT_PUBLIC_API_URL=http://localhost:3001

# Mobile App
EXPO_PUBLIC_API_URL=http://localhost:3001

# Optional: pgvector for semantic search
ENABLE_VECTOR_SEARCH=false
